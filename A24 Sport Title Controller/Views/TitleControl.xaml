<UserControl x:Class="A24_Sport_Title_Controller.Views.TitleControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:A24_Sport_Title_Controller.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:vm="clr-namespace:A24_Sport_Title_Controller.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="1008" d:DesignWidth="1800">
    <d:UserControl.DataContext>
        <vm:TitleControlViewModel/>
    </d:UserControl.DataContext>

    <ScrollViewer HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="290"/>
                <RowDefinition Height="125"/>
                <RowDefinition Height="113"/>
                <RowDefinition Height="261"/>
                <RowDefinition Height="217"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="390"/>
                <ColumnDefinition Width="530"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10 10 0 0" Background="#FF2A2A30">

                <StackPanel Orientation="Horizontal" Margin="0 10 0 8">
                    <TextBlock Text="Верхний титр" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                    <ComboBox ItemsSource="{Binding TLSList, IsAsync=True}"
                              SelectedItem="{Binding SelectedItemCbxUpTitle}"
                              Background="White" Foreground="Black" Width="272" Margin="10 0 0 0" VerticalAlignment="Center"
                              DisplayMemberPath="TLSName"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10 0 10 10" Background="#FF1F1F1F" Height="216" >

                    <TextBlock Text="Таймер" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Обратный отсчет:" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 0" VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding ChbxReversTimeCheck}" IsEnabled="{Binding ChbxReversTimeEnabled}" VerticalAlignment="Center" Foreground="White" BorderBrush="White" Background="White" Style="{StaticResource CheckBoxBase}" Width="17"/>
                        <TextBlock Text="Подстройка:" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="85 0 0 0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding TxbIntervalTimer}" IsEnabled="{Binding TxbIntervalTimerEnabled}" MaxLength="4" Width="50" Background="White" Foreground="Black" VerticalAlignment="Center" Height="25" Margin="10 0 0 0"/>
                        <TextBlock Text="мс" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding ClickClockMinutes}" HorizontalContentAlignment="Left" Margin="10" Height="60" Width="60" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                            <TextBlock Text="{Binding TbClockMinutes}" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="60" MaxWidth="60" FontSize="40" FontFamily="Times New Roman" TextAlignment="Center"/>
                            <Button.InputBindings>
                                <MouseBinding Gesture="RightClick" Command="{Binding RightClickClockMinutes}" />
                            </Button.InputBindings>
                        </Button>
                        <TextBlock Text=":" Foreground="White" VerticalAlignment="Top" Margin="10 0" FontSize="55" FontFamily="Times New Roman" />
                        <Button Command="{Binding ClickClockSeconds}" HorizontalContentAlignment="Left" Margin="10" Height="60" Width="60" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                            <TextBlock Text="{Binding TbClockSeconds}" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="60" MaxWidth="60" FontSize="40" FontFamily="Times New Roman" TextAlignment="Center"/>
                            <Button.InputBindings>
                                <MouseBinding Gesture="RightClick" Command="{Binding RightClickClockSeconds}" />
                            </Button.InputBindings>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 7 0 0">
                        <Button Command="{Binding ClickStartTime}" HorizontalContentAlignment="Center"  Height="25" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow" Width="150">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="TimerOutline" Foreground="#FF838383" Width="25" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TbButtonStartTime}" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ClickResetTime}" IsEnabled="{Binding ResetTimeEnabled}" HorizontalContentAlignment="Center" Margin="20 0 0 0" Height="25" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow" Width="150">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="TimerOffOutline" Foreground="#FF838383" Width="25" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Text="Сброс" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                        <TextBlock Text="Старт с:" Foreground="White" VerticalAlignment="Center" Margin="0 0 0 0" FontSize="12" FontFamily="Times New Roman"/>
                        <TextBox x:Name="TxbTimeStart" Text="{Binding TxbTimeStart, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding TxbTimeStartEnabled}" MaxLength="2" Width="50" Background="White" Foreground="Black" VerticalAlignment="Center" Height="25" Margin="10 0 0 0"/>
                        <TextBlock Text="мин" Foreground="White" VerticalAlignment="Center" Margin="10 0 0 0" FontSize="12" FontFamily="Times New Roman"/>
                        <TextBlock Text="Конец:" Foreground="White" VerticalAlignment="Center" Margin="45 0 0 0" FontSize="12" FontFamily="Times New Roman"/>
                        <TextBox x:Name="TxbTimeEnd" Text="{Binding TxbTimeEnd, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding TxbTimeEndEnabled}" MaxLength="2" Width="50" Background="White" Foreground="Black" VerticalAlignment="Center" Height="25" Margin="10 0 0 0"/>
                        <TextBlock Text="мин" Foreground="White" VerticalAlignment="Center" Margin="10 0 0 0" FontSize="12" FontFamily="Times New Roman"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="0 10 10 0" Background="#FF2A2A30" Orientation="Vertical">
                <StackPanel Orientation="Vertical" Margin="0,56,10,10" Background="#FF1F1F1F" Height="160" >
                    <TextBlock Text="Счет" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding TbScoreTeamName1}" TextAlignment="Center" HorizontalAlignment="Center" MaxWidth="175" MinWidth="175" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 0 0 0"/>
                        <TextBlock Text="{Binding TbScoreTeamName2}" TextAlignment="Center" HorizontalAlignment="Center" MaxWidth="175" MinWidth="175" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 0 10 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Height="60" Width="60" Margin="10" Source="{Binding ImageScoreTeam1}"/>
                        <Button Command="{Binding ClickScoreTeam1}" HorizontalContentAlignment="Center" Margin="10" Height="60" Width="60" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TbScoreTeam1}" TextAlignment="Center" Foreground="White" VerticalAlignment="Top" MinWidth="60" MaxWidth="60" HorizontalAlignment="Center" FontSize="40" FontFamily="Times New Roman"/>
                            </StackPanel>
                            <Button.InputBindings>
                                <MouseBinding Gesture="RightClick" Command="{Binding RightClickScoreTeam1}"/>
                            </Button.InputBindings>
                        </Button>
                        <TextBlock Text=":" Foreground="White" VerticalAlignment="Top" Margin="10 0" FontSize="60" FontFamily="Times New Roman" />
                        <Button Command="{Binding ClickScoreTeam2}" HorizontalContentAlignment="Center" Margin="10" Height="60" Width="60" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TbScoreTeam2}" TextAlignment="Center" Foreground="White" VerticalAlignment="Top" MinWidth="60" MaxWidth="60" HorizontalAlignment="Center"  FontSize="40" FontFamily="Times New Roman"/>
                            </StackPanel>
                            <Button.InputBindings>
                                <MouseBinding Gesture="RightClick" Command="{Binding RightClickScoreTeam2}" />
                            </Button.InputBindings>
                        </Button>
                        <Image Height="60" Width="60" Margin="10" Source="{Binding ImageScoreTeam1}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Обновлять по кнопке:" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 0" VerticalAlignment="Center"/>
                        <CheckBox IsChecked="{Binding ChbxUpdateScoreCheck}" IsEnabled="{Binding ChbxUpdateScoreEnabled}" VerticalAlignment="Center" Foreground="White" BorderBrush="White" Background="White" Style="{StaticResource CheckBoxBase}" Width="17"/>
                        <Button Command="{Binding ClickUpdateScore}" IsEnabled="{Binding UpdateScoreEnabled}" HorizontalContentAlignment="Center" Margin="20 0 0 0" Height="25" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow" Width="202">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="Score" Foreground="#FF838383" Width="25" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Text="Обновить счет" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
                <StackPanel Background="#FF1F1F1F" Margin="0 0 10 10">
                    <Button Command="{Binding ClickShowUpTitle}" HorizontalContentAlignment="Center" VerticalAlignment="Center" Height="25" Margin="10,10" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                        <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                            <materialDesign:PackIcon Kind="{Binding ShowUpTitleKind}" Foreground="{Binding ShowUpTitleColor}" Width="25" Height="25" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TbShowUpTitle}" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10 0 0 10" Background="#FF2A2A30">
                <StackPanel  Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="10,0,10,10" Background="#FF1F1F1F" Width="80" HorizontalAlignment="Left" Height="105">
                        <TextBlock Text="Тайм" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                        <Button Command="{Binding ClickPeriod}" HorizontalContentAlignment="Center" Margin="10,0,10,10" Height="60" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TbPeriod}" TextAlignment="Center" Foreground="White" VerticalAlignment="Top" MinWidth="60" MaxWidth="60" HorizontalAlignment="Center" FontSize="40" FontFamily="Times New Roman"/>
                            </StackPanel>
                            <Button.InputBindings>
                                <MouseBinding Gesture="RightClick" Command="{Binding RightClickPeriod}"/>
                            </Button.InputBindings>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0,0,10,10" Background="#FF1F1F1F" Width="280" Height="105">
                        <TextBlock Text="Короткое название команды" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Команда 1:" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 0 0 0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding TxbShortTeamName1, UpdateSourceTrigger=PropertyChanged}" Background="White" Foreground="Black" Width="193" Margin="10 0 0 0" Height="25"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="Команда 2:" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 0 0 0" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding TxbShortTeamName2, UpdateSourceTrigger=PropertyChanged}" Background="White" Foreground="Black" Width="193" Margin="10 0 0 0" Height="25"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.RowSpan="2"  Margin="10,0,0,10" Background="#FF2A2A30">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Дополнительное время" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel Margin="10,0,10,10" Background="#FF1F1F1F" VerticalAlignment="Center" Height="118" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="Количество минут" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                            <ComboBox Tag="{Binding TLSList, IsAsync=True}"
                                      ItemsSource="{Binding Tag, IsAsync=True, RelativeSource={RelativeSource Self}}"
                                      SelectedItem="{Binding SelectedItemCbxQuantityAdditionalTime}"
                                      Background="White" Foreground="Black" Width="220" Margin="10 0 0 0" VerticalAlignment="Center"
                                      DisplayMemberPath="TLSName"/>

                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Button Command="{Binding ClickQuantityAdditionalTime}" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="10 0 0 0" Height="60" Width="60" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                                <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TbQuantityAdditionalTime}" TextAlignment="Center" Foreground="White" VerticalAlignment="Top" MinWidth="60" MaxWidth="60" HorizontalAlignment="Center" FontSize="40" FontFamily="Times New Roman"/>
                                </StackPanel>
                                <Button.InputBindings>
                                    <MouseBinding Gesture="RightClick" Command="{Binding RightClickQuantityAdditionalTime}"/>
                                </Button.InputBindings>
                            </Button>
                            <Button Command="{Binding ClickShowQuantityAdditionalTime}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Margin="10 0 0 0"  Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow" Width="120">
                                <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                    <materialDesign:PackIcon Kind="Show" Foreground="#FF406787" Width="25" Height="25" VerticalAlignment="Center"/>
                                    <TextBlock Text="Показать" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="10,0,10,10" Background="#FF1F1F1F" VerticalAlignment="Center" Height="182" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="Таймер" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                            <ComboBox ItemsSource="{Binding TLSList, IsAsync=True}"
                                      SelectedItem="{Binding SelectedItemCbxAdditionalTime}"
                                      DisplayMemberPath="TLSName"
                                      Background="White" Foreground="Black" Width="291" Margin="10 0 0 0" VerticalAlignment="Center" Height="25"/>

                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                                <Button Command="{Binding ClickAdditionalTime1}" HorizontalContentAlignment="Center" Margin="10" Height="60" Width="60" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                                    <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding TbAdditionalTime1}" TextAlignment="Center" Foreground="White" VerticalAlignment="Top" MinWidth="60" MaxWidth="60" HorizontalAlignment="Center" FontSize="40" FontFamily="Times New Roman"/>
                                    </StackPanel>
                                    <Button.InputBindings>
                                        <MouseBinding Gesture="RightClick" Command="{Binding RightClickAdditionalTime1}"/>
                                    </Button.InputBindings>
                                </Button>
                                <TextBlock Text=":" Foreground="White" VerticalAlignment="Top" Margin="10 0" FontSize="55" FontFamily="Times New Roman" />
                                <Button Command="{Binding ClickAdditionalTime2}" HorizontalContentAlignment="Center" Margin="10" Height="60" Width="60" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                                    <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding TbAdditionalTime2}" TextAlignment="Center" Foreground="White" VerticalAlignment="Top" MinWidth="60" MaxWidth="60" HorizontalAlignment="Center" FontSize="40" FontFamily="Times New Roman"/>
                                    </StackPanel>
                                    <Button.InputBindings>
                                        <MouseBinding Gesture="RightClick" Command="{Binding RightClickAdditionalTime2}"/>
                                    </Button.InputBindings>
                                </Button>
                                <TextBlock Text="Авто старт:" Foreground="White" VerticalAlignment="Center" Margin="35 0 10 0" FontSize="12" FontFamily="Times New Roman" />
                                <CheckBox IsChecked="{Binding ChbxAdditionalTimeAutoStartCheck}" VerticalAlignment="Center" Foreground="White" BorderBrush="White" Background="White" Style="{StaticResource CheckBoxBase}" Width="17"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding ClickStartAdditionalTime}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Margin="10 10 0 0"  Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow" Width="110">
                                    <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                        <materialDesign:PackIcon Kind="TimerOutline" Foreground="#FF838383" Width="25" Height="25" VerticalAlignment="Center"/>
                                        <TextBlock Text="Старт" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ClickResetAdditionalTime}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Margin="10 10 0 0"  Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow" Width="110">
                                    <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                        <materialDesign:PackIcon Kind="TimerOffOutline" Foreground="#FF838383" Width="25" Height="25" VerticalAlignment="Center"/>
                                        <TextBlock Text="Сброс" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding ClickShowAdditionalTime}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Margin="10 10 0 0"  Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow" Width="110">
                                    <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                        <materialDesign:PackIcon Kind="Show" Foreground="#FF406787" Width="25" Height="25" VerticalAlignment="Center"/>
                                        <TextBlock Text="Показать" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="4" Margin="10,0,0,0" Background="#FF2A2A30" Orientation="Vertical">
                <TextBlock Text="Удаления" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 8 0 5"/>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                    <TextBlock Text="Команда 1" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 0 0 0" VerticalAlignment="Center"/>
                    <TextBlock Text="1:" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 0 0 0" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding TLSList, IsAsync=True}"
                              SelectedItem="{Binding SelectedItemCbxDelete1Team1}"
                              DisplayMemberPath="TLSName"
                              Background="White" Foreground="Black" Width="80" Margin="0 0 0 0" VerticalAlignment="Center"/>
                    <TextBlock Text="2:" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 0 0 0" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding TLSList, IsAsync=True}"
                              SelectedItem="{Binding SelectedItemCbxDelete2Team1}"
                              DisplayMemberPath="TLSName"
                              Background="White" Foreground="Black" Width="79" Margin="0 0 0 0" VerticalAlignment="Center"/>


                    <TextBlock Text="3:" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 0 0 0" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding TLSList, IsAsync=True}"
                              SelectedItem="{Binding SelectedItemCbxDelete3Team1}"
                              DisplayMemberPath="TLSName"
                              Background="White" Foreground="Black" Width="79" Margin="0 0 0 0" VerticalAlignment="Center"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                    <TextBlock Text="Команда 2" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                    <TextBlock Text="1:" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                    <ComboBox ItemsSource="{Binding TLSList, IsAsync=True}"
                              SelectedItem="{Binding SelectedItemCbxDelete1Team2}"
                              DisplayMemberPath="TLSName"
                              Background="White" Foreground="Black" Width="80" Margin="0 0 0 0" VerticalAlignment="Center"/>

                    <TextBlock Text="2:" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                    <ComboBox ItemsSource="{Binding TLSList, IsAsync=True}"
                              SelectedItem="{Binding SelectedItemCbxDelete2Team2}"
                              DisplayMemberPath="TLSName"
                              Background="White" Foreground="Black" Width="79" Margin="0 0 0 0" VerticalAlignment="Center"/>

                    <TextBlock Text="3:" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                    <ComboBox ItemsSource="{Binding TLSList, IsAsync=True}"
                              SelectedItem="{Binding SelectedItemCbxDelete3Team2}"
                              DisplayMemberPath="TLSName"
                              Background="White" Foreground="Black" Width="79" Margin="0 0 0 0" VerticalAlignment="Center"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10 0 10 10" Background="#FF1F1F1F">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="1:" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 0 0 0" VerticalAlignment="Center"/>
                            <Button Command="{Binding ClickDelete1MiniteTeam1}" HorizontalContentAlignment="Center" Margin="10 0 0 0" Height="25" Width="25" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                                <StackPanel Orientation="Horizontal" Margin="0" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TbDelete1MiniteTeam1}" TextAlignment="Center" Foreground="White" VerticalAlignment="Top" MinWidth="25" MaxWidth="25" HorizontalAlignment="Center" FontSize="12" FontFamily="Times New Roman"/>
                                </StackPanel>
                                <Button.InputBindings>
                                    <MouseBinding Gesture="RightClick" Command="{Binding RightClickDelete1MiniteTeam1}"/>
                                </Button.InputBindings>
                            </Button>
                            <TextBlock Text=":" Foreground="White" VerticalAlignment="Center" Margin="10 0 10 0" FontSize="12" FontFamily="Times New Roman" />
                            <Button Command="{Binding ClickDelete1SecondTeam1}" HorizontalContentAlignment="Center" Margin="0 0 0 0" Height="25" Width="25" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                                <StackPanel Orientation="Horizontal" Margin="0" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TbDelete1SecondTeam1}" TextAlignment="Center" Foreground="White" VerticalAlignment="Top" MinWidth="25" MaxWidth="25" HorizontalAlignment="Center" FontSize="12" FontFamily="Times New Roman"/>
                                </StackPanel>
                                <Button.InputBindings>
                                    <MouseBinding Gesture="RightClick" Command="{Binding RightClickDelete1SecondTeam1}"/>
                                </Button.InputBindings>
                            </Button>
                            <Button Command="{Binding ClickShowDelete1Team1}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Margin="10 0 0 0"  Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow" Width="50">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="50">
                                    <materialDesign:PackIcon Kind="{Binding ShowDelete1Team1Kind}" Foreground="{Binding ShowDelete1Team1Color}" Width="50" Height="25" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                            <TextBlock Text="2:" Foreground="White" FontSize="12" FontFamily="Times New Roman" Margin="10 0 0 0" VerticalAlignment="Center"/>
                            <Button Command="{Binding ClickDelete2MiniteTeam1}" HorizontalContentAlignment="Center" Margin="10 0 0 0" Height="25" Width="25" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                                <StackPanel Orientation="Horizontal" Margin="0" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding TbDelete2MiniteTeam1}" TextAlignment="Center" Foreground="White" VerticalAlignment="Top" MinWidth="25" MaxWidth="25" HorizontalAlignment="Center" FontSize="12" FontFamily="Times New Roman"/>
                                </StackPanel>
                                <Button.InputBindings>
                                    <MouseBinding Gesture="RightClick" Command="{Binding RightClickDelete2MiniteTeam1}"/>
                                </Button.InputBindings>
                            </Button>
                            <TextBlock Text=":" Foreground="White" VerticalAlignment="Center" Margin="10 0 10 0" FontSize="12" FontFamily="Times New Roman" />
