                                <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                    <TextBlock Text="Замена 1 команды:" Foreground="White" VerticalAlignment="Center" Margin="10 0 10 0" FontSize="12" FontFamily="Times New Roman" />
                                    <CheckBox IsChecked="{Binding ChbxReplacementTeam1Check}" Command="{Binding ClickReplacementTeam1Chbx}" IsEnabled="{Binding ChbxReplacementTeam1Enable}" VerticalAlignment="Center" Foreground="White" BorderBrush="White" Background="White" Style="{StaticResource CheckBoxBase}" Width="17"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                    <TextBlock Text="Замена 2 команды:" Foreground="White" VerticalAlignment="Center" Margin="10 0 10 0" FontSize="12" FontFamily="Times New Roman" />
                                    <CheckBox IsChecked="{Binding ChbxReplacementTeam2Check}" Command="{Binding ClickReplacementTeam2Chbx}" IsEnabled="{Binding ChbxReplacementTeam2Enable}" VerticalAlignment="Center" Foreground="White" BorderBrush="White" Background="White" Style="{StaticResource CheckBoxBase}" Width="17"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding TbSignatureTeamName2}" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 10 10" MinWidth="160" MaxWidth="160" TextAlignment="Center"/>
                            <DataGrid ItemsSource="{Binding TablePlayerList2}" SelectedValue="{Binding SelectedValueTablePlayerList2TC}" 
                                      SelectedValuePath="PlayerNumber" SelectedItem="{Binding SelectedItemTablePlayerList2TC}" SelectedIndex="{Binding SelectedIndexTablePlayerList2TC}" 
                                      IsEnabled="{Binding TablePlayerList2Enabled}"
                                      IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single" AutoGenerateColumns="False" Height="610" Width="315" Margin="10 0">
                                <DataGrid.Resources>
                                    <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="Background" Value="#FF406787" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="BorderBrush" Value="Black"/>
                                        <Setter Property="FontFamily" Value="Times New Roman"/>
                                        <Setter Property="FontSize" Value="15"/>
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Номер" MinWidth="75" MaxWidth="75" Binding="{Binding PlayerNumber}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="FontFamily" Value="Times New Roman" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Игрок" MinWidth="240" MaxWidth="240" Binding="{Binding PlayerFIO}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="FontFamily" Value="Times New Roman" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Height" Value="35"/>
                                        <Setter Property="FontSize" Value="15"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Margin" Value="10 0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FFB3CBDE" />
                                                <Setter Property="Foreground" Value="Black"/>
                                                <!--<Setter Property="FontWeight" Value="Bold"/>-->
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter Property="Background" Value="White" />
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="FrameworkElement.VerticalAlignment" Value="Center"/>
                                        <Setter Property="Height" Value="35"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FFB3CBDE" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter Property="Background" Value="White" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
            <StackPanel Grid.Column="3" Grid.Row="4" Margin="0 0 10 0" Background="#FF2A2A30" Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0 10 0 8">
                    <TextBlock Text="Прочее" Foreground="White" FontSize="15" FontFamily="Times New Roman" Margin="10 10 0 10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10 0 10 10" Background="#FF1F1F1F" Height="152" >

                    <StackPanel Orientation="Vertical" Width="501" >
                        <Button Command="{Binding ClickClearAllLayers}" HorizontalContentAlignment="Center" VerticalAlignment="Center" Height="25" Margin="10 12 10 0" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="HideOutline" Foreground="#FFB25F5F" Width="25" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Text="Очистить все титры" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ClickSaveTemplate}" HorizontalContentAlignment="Center" VerticalAlignment="Center" Height="25" Margin="10 10 10 0" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="Export" Foreground="#FF7EC772" Width="25" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Text="Сохранить шаблон" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ClickLoadTemplate}" HorizontalContentAlignment="Center" VerticalAlignment="Center" Height="25" Margin="10 10 10 0" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="Import" Foreground="#FF8972C7" Width="25" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Text="Загрузить шаблон" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ClickDefaultTemplate}" HorizontalContentAlignment="Center" VerticalAlignment="Center" Height="25" Margin="10 10 10 0" Background="#FF2A2A30" BorderThickness="0" Padding="0" Cursor="Arrow">
                            <StackPanel Orientation="Horizontal" Margin="10 0" HorizontalAlignment="Left">
                                <materialDesign:PackIcon Kind="BackupRestore" Foreground="White" Width="25" Height="25" VerticalAlignment="Center"/>
                                <TextBlock Text="Восстановить по умолчанию" Foreground="White" VerticalAlignment="Center" Margin="10 0" FontSize="12" FontFamily="Times New Roman"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
